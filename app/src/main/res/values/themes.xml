<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Light Theme. -->
    <style name="Theme.LetsChat" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryVariant">@color/color_primary</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/color_secondary</item>
        <item name="colorSecondaryVariant">@color/color_secondary</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Window Background -->
        <item name="android:windowBackground">@color/off_white</item>

    </style>

    <!-- Style for toolbar -->
    <style name="MyToolbar" parent="Widget.MaterialComponents.Toolbar">
        <!-- Customize text color for menu items -->
        <item name="android:iconTint">@color/white</item>
    </style>

</resources>