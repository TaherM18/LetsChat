<?xml version="1.0" encoding="utf-8"?>
<layout>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <LinearLayout
        android:id="@+id/card_left_chat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text_rounded_corner"
        android:backgroundTint="@color/color_message_sender"
        android:padding="8dp"
        android:layout_marginEnd="80dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_left_chat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Hello! how are you"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/txt_left_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="1:00 PM"
            android:textColor="@color/white"
            android:layout_gravity="end"/>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/card_right_chat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text_rounded_corner"
        android:backgroundTint="@color/color_message_receiver"
        android:padding="8dp"
        android:layout_marginStart="80dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_right_chat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Hello! How are you?"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/txt_right_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="1:00 PM"
            android:textColor="@color/white"
            android:layout_gravity="end"/>

    </LinearLayout>

</RelativeLayout>

</layout>