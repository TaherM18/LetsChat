<?xml version="1.0" encoding="utf-8"?>
<layout>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <LinearLayout
        android:id="@+id/layout_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text_rounded_corner"
        android:backgroundTint="@color/color_message_sender"
        android:padding="8dp"
        android:layout_marginEnd="80dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_message_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Hello! how are you"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/txt_time_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="1:00 PM"
            android:textColor="@color/white"
            android:layout_gravity="end"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/img_reaction_left"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/emoji_24"
        android:layout_below="@id/layout_left"
        android:layout_alignStart="@+id/layout_left"
        android:background="@drawable/circular_background"
        android:backgroundTint="@color/color_message_sender"
        android:padding="4dp"
        android:layout_marginTop="-8dp"
        android:layout_marginStart="8dp"
        android:visibility="gone"/>



    <LinearLayout
        android:id="@+id/layout_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text_rounded_corner"
        android:backgroundTint="@color/color_message_receiver"
        android:padding="8dp"
        android:layout_marginStart="80dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_message_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Hello! How are you?"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/txt_time_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="1:00 PM"
            android:textColor="@color/white"
            android:layout_gravity="end"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/img_reaction_right"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/emoji_24"
        android:layout_below="@id/layout_right"
        android:layout_alignEnd="@+id/layout_right"
        android:background="@drawable/circular_background"
        android:backgroundTint="@color/color_message_receiver"
        android:padding="4dp"
        android:layout_marginTop="-8dp"
        android:layout_marginEnd="8dp"
        android:visibility="gone"/>

</RelativeLayout>

</layout>