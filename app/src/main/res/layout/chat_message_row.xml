<?xml version="1.0" encoding="utf-8"?>
<layout >

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/ThemeOverlay.MaterialComponents">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_left_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="80dp"
            android:elevation="8dp"
            app:cardBackgroundColor="@color/color_message_sender"
            app:cardCornerRadius="8dp"
            app:cardUseCompatPadding="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_left_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hello! How are you?"
                    android:textColor="@color/white"
                    android:textSize="16dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>

                <TextView
                    android:id="@+id/txt_left_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="11:0 AM"
                    android:textColor="#ccc"
                    android:textSize="12sp"
                    app:layout_constraintTop_toBottomOf="@id/txt_left_message"
                    app:layout_constraintEnd_toEndOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>


        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_right_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="80dp"
            android:elevation="8dp"
            app:cardBackgroundColor="@color/color_message_receiver"
            app:cardCornerRadius="8dp"
            app:cardUseCompatPadding="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_right_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hey! I am fine"
                    android:textColor="@color/white"
                    android:textSize="16dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/txt_right_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="11:01 AM"
                    android:textColor="#ccc"
                    android:textSize="12dp"
                    app:layout_constraintTop_toBottomOf="@id/txt_right_message"
                    app:layout_constraintEnd_toEndOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>

    </RelativeLayout>

</layout>